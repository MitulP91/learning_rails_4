<h2> Characters </h2>
<%= link_to 'Create New Character', new_character_path %>

<table>
	<thead>
		<td>Name</td>
		<td>Gender</td>
		<td>Present In</td>
		<td>Edit</td>
		<td>Delete</td>
	</thead>
	<tbody>
		<% @characters.each do |char| %>
			<tr>
				<td><%= link_to char.name, character_path(char) %></td>
				<td><%= char.gender %></td>
				<td><%= char.video_games.first.title %></td>
				<td><%= link_to 'Edit', edit_character_path(char) %></td>
				<td><%= link_to 'Delete', character_destroy_path(char), method: :post %></td>
			</tr>
		<% end %>
	</tbody>
</table>